<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  android:background="@color/background_color">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/edit_profile_image"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_gravity="center_horizontal"
      android:src="@drawable/profile_foreground"
      android:elevation="4dp"/>

    <!-- Text indicating change image -->
    <TextView
      android:id="@+id/edit_change_image_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Change Profile Picture"
      android:textColor="@color/primary"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="8dp"/>

    <!-- First Name -->
    <EditText
      android:id="@+id/edit_et_firstname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="First Name"
      android:inputType="textPersonName"
      android:layout_marginTop="16dp"/>

    <!-- Last Name -->
    <EditText
      android:id="@+id/edit_et_lastname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Last Name"
      android:inputType="textPersonName"
      android:layout_marginTop="8dp"/>

    <!-- Email -->
    <EditText
      android:id="@+id/edit_et_email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:layout_marginTop="8dp"/>

    <!-- Location -->
    <EditText
      android:id="@+id/edit_et_location"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Location (City, Country)"
      android:inputType="text"
      android:layout_marginTop="8dp"/>

    <!-- Save Button -->
    <Button
      android:id="@+id/edit_btn_save"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Save Changes"
      android:layout_marginTop="16dp"/>
  </LinearLayout>
</ScrollView>
